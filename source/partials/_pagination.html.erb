<div class="pagination">
  <% if paginate && num_pages > 1 %>
    <% if prev_page %>
      <%= link_to '&larr; Previous', prev_page %>
    <% else %>
      <span>Previous</span>
    <% end %>

    <span>Page <%= page_number %> of <%= num_pages %></span>
  <% end %>

  <% if paginate %>
    <% if next_page %>
      <%= link_to 'Next &rarr;', next_page %>
    <% else %>
      <span>Next</span>
    <% end %>
  <% end %>
</div>